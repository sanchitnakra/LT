@model sampleMVC.Models.ApplyLeave

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ExportToExcelForTL</title>
    <style type="text/css">
        body {
            font-family: Calibri;
        }

        h2 {
            color: red;
        }

        table {
            border: 20px solid black;
            border-spacing: 0;
        }

        td {
            color: black;
            font-size: 1em;
            padding: 5px;
        }

        .heading {
            background: #1E90FF;
        }
        .border {

        }
    </style>
</head>
<body>
    <table>
        <tr class="heading">
            <th>TCS Emp ID</th>
            <th>MSID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Silo</th>
            <th>Sub-Silo</th>
            <th>Location</th>
            <th>Project</th>
            <th>Type Of Leave</th>
            <th>Reason</th>
            <th>No. of Days</th>
            <th>Supervisor Name</th>
            <th>Status</th>
            <th>Customer Manager Name</th>
            <th>Exp Level</th>
        </tr>
        @foreach (sampleMVC.Models.ApplyLeave item in Model.ExportToExcelForTLList)
        {
            <tr>
                <td>@item.emp_ID</td>
                <td>@item.MSID</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@item.EndDate.ToShortDateString()</td>
                <td>@item.Branch</td>
                <td>@item.subArea</td>
                <td>@item.Location</td>
                <td>@item.ProjectName</td>
                <td>@item.TypeOfLeaves</td>
                <td>@item.Reason</td>
                <td>@item.TotalLeaves</td>
                <td>@item.supervisorName</td>
                <td>@item._Status</td>
                <td>@item.custManaName</td>
                <td>@item.expLevel</td>
            </tr>
        }


    </table>
</body>
</html>
