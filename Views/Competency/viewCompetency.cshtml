@model sampleMVC.Models.Competency

@{
    Layout = null;
}

<!DOCTYPE html>

<html ng-app="app" ng-controller="CustomerController">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>viewCompetency</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/locale/en-ca.js"></script>
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")
    @Styles.Render("~/Content/Bootstrap.css")
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Leave Tracker", "ApplyLeaves", "ApplyLeave", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <div class="nav navbar-nav navbar-right">
                    @*<button type="button" class="navbar-brand" data-toggle="modal" data-target="#myModal">Change Password</button>*@
                    @*<button type="button" class="navbar-brand" data-toggle="modal" data-target="#myModal">Change Password</button>*@
                    @Html.ActionLink("Compentency Tracker", "viewCompetency", "Competency", new { @class = "navbar-brand" })
                    @Html.ActionLink("Logout", "Logout", "Competency", new { @class = "navbar-brand" })
                </div>
            </div>
        </div>
    </div>
    <div class="nav navbar-nav navbar-left" style="padding-top:50px">
        @Html.ActionLink("Add Courses", "addCourses", "Competency", new { @class = "navbar-brand" })
    </div>

    <div>
        
        <div style="padding-top:70px">
            <h1 style="text-align:center">View Competency</h1>
        </div>
        
            <div class="table-responsive">

                <table class="table table-striped table-bordered table-hover" id="LeaveTable">
                    <thead>
                        <tr>
                            <th>Emp ID</th>
                            <th>MSID</th>
                            <th>Competency Level</th>
                            <th>Course Name</th>
                            <th>Quiz ID</th>
                            <th>Enroll Date</th>
                            <th>Status</th>
                            <th>Action</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model.getCoursesFromDBList)
                        {

                            <tr>

                                <td>@item.Emp_ID</td>
                                <td>@item.MSID</td>
                                <td>@item.compLevel</td>
                                <td>@item.courseName</td>
                                <td>@item.quizID</td>
                                <td>@item.enrollDate</td>
                                <td>@item.completionStatus</td>
                                <td>
                                    @if (@item.completionStatus.Equals("Incomplete"))
                                    {
                                        @*@Html.ActionLink("Launch", "", "Competency");*@
                                        <a href="#" class="button" ng-click="getCustomer(@item.courseID)" title="Launch">
                                            Launch
                                            @*<imgsrc ="~/Content/images/edit.png" />*@
                                        </a>

                                        @Html.ActionLink("Drop Course", "dropCourse", "Competency", new { id = item.autoGeneratedID }, null);
                                    }
                                </td>


                            </tr>



                        }
                    </tbody>
                </table>
                @*<div class="watermark" ng-if="noDataMsg">No data available for Competetency Level {{selectedLevel}}</div>
                <div class="watermark" ng-if="initialMsg" aria-hidden="false"> Select Competency Level to see available data </div>*@
            </div>
        </div>

        <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular.min.js"></script>
        @*<script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular-route.min.js"></script>*@
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @*@Scripts.Render("~/bundles/uiBootstrap")*@
        @*@Scripts.Render("~/bundles/angular")*@
        @Scripts.Render("~/bundles/QuizProjectApp")
</body>

</html>
