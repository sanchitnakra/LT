@model sampleMVC.Models.Competency

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>addCourses</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/locale/en-ca.js"></script>
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")
    @Styles.Render("~/Content/Bootstrap.css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Leave Tracker", "ApplyLeaves", "ApplyLeave", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <div class="nav navbar-nav navbar-right">
                    @Html.ActionLink("Compentency Tracker", "viewCompetency", "Competency", new { @class = "navbar-brand" })
                    @Html.ActionLink("Logout", "Logout", "LTLogin", new { @class = "navbar-brand" })
                </div>
            </div>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        <div class="col-lg-1" id="forCompentencyLevel" style="padding-top:50px">
            <table style="width:25%;margin-left:auto;margin-right:auto;border-collapse: separate;border-spacing: 5px 5px;">
                <tr class="col-lg-1">
                    <td>@Html.DropDownListFor(m => m.compLevel, Model.selectCompLevel, "Select Compentency Level", new { @class = "form-control,longDropdownList" })</td>
                </tr>
                <tr class="col-lg-12" style="padding-top:60px">
                    <td><button type="submit" class="btn btn-default" formaction="~/Competency/getCourses" formmethod="post">Get Courses</button></td>
                </tr>
            </table>
        </div>
    }
</body>
</html>
