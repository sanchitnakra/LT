@model sampleMVC.Models.Competency

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>getCourses</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/locale/en-ca.js"></script>
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")
    @Styles.Render("~/Content/Bootstrap.css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Leave Tracker", "ApplyLeaves", "ApplyLeave", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <div class="nav navbar-nav navbar-right">
                    @*<button type="button" class="navbar-brand" data-toggle="modal" data-target="#myModal">Change Password</button>*@
                    @*<button type="button" class="navbar-brand" data-toggle="modal" data-target="#myModal">Change Password</button>*@
                    @Html.ActionLink("Compentency Tracker", "viewCompetency", "Competency", new { @class = "navbar-brand" })
                    @Html.ActionLink("Logout", "Logout", "LTLogin", new { @class = "navbar-brand" })
                </div>
            </div>
        </div>
    </div>
    <div class="container" style="padding-top:10px">

       @Html.ActionLink("View Competency", "viewCompetency", "Competency", new { @class = "navbar-brand", @style = "padding-top:50px" })
        <div class="table-responsive" style="padding-top:70px">
            @using (Html.BeginForm())
            {
                <table class="table table-striped table-bordered table-hover" style="padding-top:100px">
                    <thead>
                        <tr>
                            <th>Course Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (sampleMVC.Models.Competency item in Model.getCoursesFromDBList)
                        {
                            <tr>
                                <td>@item.courseName</td>
                                <td>@Html.ActionLink("Enroll", "enrollCourse", "Competency", new { id = item.courseID }, null)</td>
                            </tr>
                        }
                    </tbody>

                </table>
            }
        </div>
    </div>
</body>
</html>